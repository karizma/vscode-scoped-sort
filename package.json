{
    "name": "scoped-sort",
    "displayName": "Scoped Sort",
    "description": "Sort text in a scope (vs line by line)",
    "version": "0.5.0",
    "publisher": "karizma",
    "icon": "assets/logo.png",
    "main": "./src/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/karizma/vscode-scoped-sort"
    },
    "bugs": {
        "url": "https://github.com/karizma/vscode-scoped-sort/issues"
    },
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other",
        "Formatters"
    ],
    "keywords": [
        "sort",
        "markdown",
        "list",
        "nested",
        "recursive",
        "scoped"
    ],
    "activationEvents": [
        "onCommand:scoped-sort.sort"
    ],
    "contributes": {
        "configuration": {
            "title": "scoped-sort",
            "properties": {
                "scoped-sort.prompt": {
                    "type": "boolean",
                    "default": true,
                    "description": "Decides if the program should always prompt/ask for options"
                },
                "scoped-sort.sortType": {
                    "type": "string",
                    "default": "ascending",
                    "description": "The sorting type.",
                    "enum": [
                        "ascending",
                        "descending"
                    ]
                },
                "scoped-sort.recursive": {
                    "type": "boolean",
                    "default": true,
                    "description": "Decides if nested items will also be sorted."
                },
                "scoped-sort.unique": {
                    "type": "boolean",
                    "default": false,
                    "description": "Decides if duplicated items will be deleted."
                },
                "scoped-sort.caseInsensitive": {
                    "type": "boolean",
                    "default": true,
                    "description": "Decides if sorting should be case insensitive, if unique is also provided, it will delete duplicate items regardless of their difference in casing."
                }
            }
        },
        "commands": [
            {
                "command": "scoped-sort.sort",
                "title": "Scope Sort Selected"
            }
        ]
    },
    "scripts": {
        "test": "node ./test/suite/sort.test.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "14.x",
        "@types/tape": "^4.13.0",
        "@types/vscode": "^1.57.0",
        "glob": "^7.1.7",
        "jest-diff": "^27.0.6",
        "tape": "^5.2.2",
        "vscode-test": "^1.5.2"
    }
}
