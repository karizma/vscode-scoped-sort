{
    "name": "scoped-sort",
    "displayName": "Scoped Sort",
    "description": "A feature rich sorter for vscode.",
    "version": "1.0.2",
    "publisher": "karizma",
    "icon": "assets/scoped-sort-red-circle.png",
    "main": "./dist/extension.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/karizma/vscode-scoped-sort"
    },
    "bugs": {
        "url": "https://github.com/karizma/vscode-scoped-sort/issues"
    },
    "engines": {
        "vscode": "^1.57.0"
    },
    "categories": [
        "Other",
        "Formatters"
    ],
    "keywords": [
        "sort",
        "markdown",
        "list",
        "nested",
        "recursive",
        "scoped"
    ],
    "activationEvents": [
        "onStartupFinished",
        "onCommand:scoped-sort.sort",
        "onCommand:scoped-sort.addSurroundingSortComments"
    ],
    "contributes": {
        "configuration": {
            "title": "scoped-sort",
            "properties": {
                "scoped-sort.prompt": {
                    "type": "boolean",
                    "default": true,
                    "description": "Decides if the program should always prompt/ask for options when executing the main command"
                },
                "scoped-sort.formatSectionsOnSave": {
                    "type": "boolean",
                    "default": true,
                    "description": "Decides if the program should try to format sections that are marked"
                },
                "scoped-sort.defaultArgs": {
                    "type": "string",
                    "default": "",
                    "description": "If `scoped-sort.prompt` is on, it will inject the arguments into the prompt, if it's off it will execute the sort with those arguments. Only affects manually executing the command, keybindings and sort-on-save don't care about this option"
                }
            }
        },
        "commands": [
            {
                "command": "scoped-sort.sort",
                "title": "Scoped Sort"
            },
            {
                "command": "scoped-sort.addSurroundingSortComments",
                "title": "Add Surrounding Sort Comments On Selection"
            }
        ]
    },
    "scripts": {
        "test": "tape ./test/api/**.js",
        "pretty": "npx prettier --write ."
    },
    "devDependencies": {
        "@types/glob": "^7.1.3",
        "@types/node": "14.x",
        "@types/tape": "^4.13.0",
        "@types/vscode": "^1.57.0",
        "glob": "^7.1.7",
        "jest-diff": "^27.0.6",
        "prettier": "^2.3.2",
        "tape": "^5.2.2",
        "vscode-test": "^1.5.2"
    }
}
